extends layout

block content
  #top-container
    include ./nav.jade
      h1#title Andreas Bloomquist
      h2 Full Stack Developer

      #bottom-container.row
          #arrow.medium-3.medium-offset-5.columns
            a(href="#skills")
              img(src="images/down.ico")
          #socials.medium-3.columns
            #github.social
              a(href="https://github.com/andreasbloomquist")
                i.fi-social-github
            #linkedin.social
              a(href="https://www.linkedin.com/in/andreasbloomquist")
                i.fi-social-linkedin
            #twitter.social
              a(href="https://twitter.com/andrebloom")
                i.fi-social-twitter

      #skills.row
        #left-container.small-2.large-4.columns.skills
          h2 Agile guru
          p I've worked with many Agile methodologies across multiple teams, and I'm a Certified Scrum Master.

        #center-container.small-4.large-4.columns.skills
          h2 Full Stack Developer
          p I love to code! I'm proud to say that I've taken my skills to the next level by attending General Assembly's Web Development Immersive 12-week course.

        #right-container.small-6.large-4.columns.skills
          h2 Music & Travel lover!
          p Besides coding, my other passions including music and traveling.

        #skill-icons.row
          .medium-12.medium-12.columns
            h2.skills A few of my skills
            ul.small-block-grid-6
              li
                img.mongo(src="images/mongodb-logo.jpeg", alt="MongoDB")
              li
                img.angular(src="images/angularjs.png", alt="AngularJS Frontend Framework")
              li
                img.node(src="images/ng_logo.png")
              li
                img.express(src="images/express_logo.png")
              li
                img.ruby(src="images/ruby.png")






  script
    $(document).foundation();
